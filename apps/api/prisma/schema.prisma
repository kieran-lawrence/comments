generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Site {
  id        Int       @id @default(autoincrement())
  name      String
  createdAt DateTime  @default(now())
  users     User[]
  articles  Article[]
}

model User {
  id                   Int                    @id @default(autoincrement())
  name                 String
  role                 Role                   @default(USER)
  createdAt            DateTime               @default(now())
  site                 Site                   @relation(fields: [siteId], references: [id])
  siteId               Int
  articles             Article[]
  comments             Comment[]              @relation("CommentToUser")
  commentStatusChanges CommentStatusChanges[]
  reviewedComments     Comment[]              @relation("CommentReviewedByUser")
  suspended            Boolean                @default(false)
  suspendedUntil       DateTime?
  suspendedBy          User?                  @relation("UserSuspendedBy", fields: [suspendedById], references: [id])
  suspendedById        Int?
  suspendedReason      String?
  User                 User[]                 @relation("UserSuspendedBy")
  ignoredUsers         UserIgnoredUsers[]     @relation("UserIgnoredUsers_user")
  ignoredByUsers       UserIgnoredUsers[]     @relation("UserIgnoredUsers_ignored")
}

model UserIgnoredUsers {
  userId    Int
  ignoredId Int
  ignoredAt DateTime @default(now())
  user      User     @relation("UserIgnoredUsers_user", fields: [userId], references: [id])
  ignored   User     @relation("UserIgnoredUsers_ignored", fields: [ignoredId], references: [id])

  @@id([userId, ignoredId])
}

model Article {
  id           Int                     @id @default(autoincrement())
  articleId    String
  articleUrl   String
  articleTitle String
  status       ArticleCommentingStatus @default(OPEN)
  createdAt    DateTime                @default(now())
  author       User                    @relation(fields: [authorId], references: [id])
  authorId     Int
  comments     Comment[]
  site         Site                    @relation(fields: [siteId], references: [id])
  siteId       Int
}

model Comment {
  id            Int                    @id @default(autoincrement())
  parentId      Int?
  parent        Comment?               @relation("CommentToReplies", fields: [parentId], references: [id])
  replies       Comment[]              @relation("CommentToReplies")
  content       String
  status        CommentStatus          @default(PENDING)
  likeCount     Int                    @default(0)
  createdAt     DateTime               @default(now())
  updatedAt     DateTime               @default(now())
  article       Article                @relation(fields: [articleId], references: [id])
  articleId     Int
  author        User                   @relation("CommentToUser", fields: [authorId], references: [id])
  authorId      Int
  statusChanges CommentStatusChanges[]
  reviewedBy    User?                  @relation("CommentReviewedByUser", fields: [reviewedById], references: [id])
  reviewedById  Int?
}

model CommentStatusChanges {
  id            Int                   @id @default(autoincrement())
  comment       Comment               @relation(fields: [commentId], references: [id])
  commentId     Int
  oldStatus     CommentStatus
  newStatus     CommentStatus
  changedBy     CommentStatusChangeBy @default(SYSTEM)
  changedByUser User?                 @relation(fields: [changedById], references: [id])
  changedById   Int?
  changedReason String?
  changedAt     DateTime              @default(now())
}

enum Role {
  USER
  MODERATOR
  ADMIN
}

enum ArticleCommentingStatus {
  OPEN
  CLOSED
}

enum CommentStatus {
  PENDING
  APPROVED
  REJECTED
  FLAGGED
}

enum CommentStatusChangeBy {
  STAFF
  COMMUNITY
  SYSTEM
}
