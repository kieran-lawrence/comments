generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Site {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  user      User[]
}

model User {
  id                   Int                    @id @default(autoincrement())
  name                 String
  role                 Role                   @default(USER)
  createdAt            DateTime               @default(now())
  site                 Site                   @relation(fields: [siteId], references: [id])
  siteId               Int
  stories              Story[]
  comments             Comment[]              @relation("CommentToUser")
  commentStatusChanges CommentStatusChanges[]
  reviewedComments     Comment[]              @relation("CommentReviewedByUser")
}

model Story {
  id           Int                   @id @default(autoincrement())
  articleId    String
  articleUrl   String
  articleTitle String
  status       StoryCommentingStatus @default(OPEN)
  createdAt    DateTime              @default(now())
  author       User                  @relation(fields: [authorId], references: [id])
  authorId     Int
  comments     Comment[]
}

model Comment {
  id            Int                    @id @default(autoincrement())
  parentId      Int?
  parent        Comment?               @relation("CommentToReplies", fields: [parentId], references: [id])
  replies       Comment[]              @relation("CommentToReplies")
  content       String
  status        CommentStatus          @default(PENDING)
  createdAt     DateTime               @default(now())
  updatedAt     DateTime               @default(now())
  story         Story                  @relation(fields: [storyId], references: [id])
  storyId       Int
  author        User                   @relation("CommentToUser", fields: [authorId], references: [id])
  authorId      Int
  statusChanges CommentStatusChanges[]
  reviewedBy    User?                  @relation("CommentReviewedByUser", fields: [reviewedById], references: [id])
  reviewedById  Int?
}

model CommentStatusChanges {
  id            Int                   @id @default(autoincrement())
  comment       Comment               @relation(fields: [commentId], references: [id])
  commentId     Int
  oldStatus     CommentStatus
  newStatus     CommentStatus
  changedBy     CommentStatusChangeBy @default(SYSTEM)
  changedByUser User?                 @relation(fields: [changedById], references: [id])
  changedById   Int?
  changedReason String?
  changedAt     DateTime              @default(now())
}

enum Role {
  USER
  MODERATOR
  ADMIN
}

enum StoryCommentingStatus {
  OPEN
  CLOSED
}

enum CommentStatus {
  PENDING
  APPROVED
  REJECTED
  FLAGGED
}

enum CommentStatusChangeBy {
  USER
  COMMUNITY
  SYSTEM
}
