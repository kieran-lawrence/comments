generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   String                 @id
  name                 String
  role                 Role                   @default(USER)
  email                String                 @unique
  createdAt            DateTime               @default(now())
  articles             Article[]
  comments             Comment[]              @relation("CommentToUser")
  commentStatusChanges CommentStatusChanges[]
  reviewedComments     Comment[]              @relation("CommentReviewedByUser")
  flaggedComments      Comment[]              @relation("CommentFlaggedByUser")
  active               Boolean                @default(true)
  deleted              Boolean                @default(false)
  suspended            Boolean                @default(false)
  suspendedAt          DateTime?
  suspendedUntil       DateTime?
  suspendedBy          User?                  @relation("UserSuspendedBy", fields: [suspendedById], references: [id], onDelete: Restrict)
  suspendedById        String?
  suspendedReason      String?
  User                 User[]                 @relation("UserSuspendedBy")
  ignoredUsers         UserIgnoredUsers[]     @relation("UserIgnoredUsers_user")
  ignoredByUsers       UserIgnoredUsers[]     @relation("UserIgnoredUsers_ignored")
}

model UserIgnoredUsers {
  userId    String
  ignoredId String
  ignoredAt DateTime @default(now())
  user      User     @relation("UserIgnoredUsers_user", fields: [userId], references: [id], onDelete: Restrict)
  ignored   User     @relation("UserIgnoredUsers_ignored", fields: [ignoredId], references: [id], onDelete: Restrict)

  @@id([userId, ignoredId])
}

model Article {
  id           Int                     @id @default(autoincrement())
  articleId    String
  articleUrl   String
  articleTitle String
  status       ArticleCommentingStatus @default(OPEN)
  createdAt    DateTime                @default(now())
  author       User                    @relation(fields: [authorId], references: [id], onDelete: Restrict)
  authorId     String
  comments     Comment[]
}

model Comment {
  id            Int                    @id @default(autoincrement())
  parentId      Int?
  parent        Comment?               @relation("CommentToReplies", fields: [parentId], references: [id])
  replies       Comment[]              @relation("CommentToReplies")
  content       String
  status        CommentStatus          @default(PENDING)
  likeCount     Int                    @default(0)
  createdAt     DateTime               @default(now())
  updatedAt     DateTime               @default(now())
  article       Article                @relation(fields: [articleId], references: [id])
  articleId     Int
  author        User                   @relation("CommentToUser", fields: [authorId], references: [id], onDelete: Restrict)
  authorId      String
  statusChanges CommentStatusChanges[]
  reviewedBy    User?                  @relation("CommentReviewedByUser", fields: [reviewedById], references: [id], onDelete: Restrict)
  reviewedById  String?
  flaggedBy     User?                  @relation("CommentFlaggedByUser", fields: [flaggedById], references: [id], onDelete: Restrict)
  flaggedById   String?
}

model CommentStatusChanges {
  id            Int                   @id @default(autoincrement())
  comment       Comment               @relation(fields: [commentId], references: [id])
  commentId     Int
  oldStatus     CommentStatus
  newStatus     CommentStatus
  changedBy     CommentStatusChangeBy @default(SYSTEM)
  changedByUser User?                 @relation(fields: [changedById], references: [id], onDelete: Restrict)
  changedById   String?
  changedReason String?
  changedAt     DateTime              @default(now())
}

enum Role {
  USER
  MODERATOR
  ADMIN
}

enum ArticleCommentingStatus {
  OPEN
  CLOSED
}

enum CommentStatus {
  PENDING
  APPROVED
  REJECTED
  FLAGGED
}

enum CommentStatusChangeBy {
  STAFF
  COMMUNITY
  SYSTEM
}
